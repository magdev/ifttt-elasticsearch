li.collection-item.item.infsc-item(data-id=row._id, data-index=row._index, data-type=row._type)
  if row._source.url
    a(href=row._source.url, target='_blank')
      if row._type == 'message'
        span.title.truncate #{row._source.description}
      else
        span.title.truncate #{row._source.title}
  if row._source.publicUrl
    a(href=row._source.publicUrl, target='_blank')
      span.title.truncate #{row._source.title}
  em.right.grey-text.lighten-1: small #{moment(new Date(row._source.timestamp)).fromNow()} from #{row._source.datasource}