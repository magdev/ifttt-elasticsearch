#donate.modal.modal-fixed-footer
  .modal-content
    h3 #{__('Donate to IFTTT-Elasticsearch')}
    p #{__('If you like this software feel free to donate something')}
    .row 
      .col.s6.m4.center-align.box
        .box-body 
          img.circle(src='/img/logo/paypal-128.png', alt='Paypal')
          form(action='https://www.paypal.com/cgi-bin/webscr', method='post', target='_blank')
            input(type='hidden', name='cmd', value='_donations')
            input(type='hidden', name='business', value='magdev3.0@googlemail.com')
            input(type='hidden', name='lc', value='US')
            input(type='hidden', name='item_name', value='Marco Gr√§tsch (IFTTT-Elasticsearch)')
            input(type='hidden', name='no_note', value='0')
            input(type='hidden', name='currency_code', value='EUR')
            input(type='hidden', name='bn', value='PP-DonationsBF:btn_donateCC_LG.gif:NonHostedGuest')
        .box-footer
          button.waves-effect.btn(type='submit', name='submit', class=appdata.ui.theme.buttonColor) #{__('Paypal')}
      .col.s6.m4.center-align.box
        .box-body
          img.circle(src='/img/logo/bitcoin-128.png', alt='Bitcoin')
        .box-footer
          a.btn.waves-effect(href='bitcoin:1Bmw9e3VBuCZzmtk4r9QiEUuVDPmSBp7tW?amount=0.1&message=Donation%20to%20IFTTT-Elasticsearch', class=appdata.ui.theme.buttonColor) #{__('Bitcoin')}
      .col.s6.m4.center-align.box
        .box-body
          img.circle(src='/img/logo/amazon-128.png', alt='Amazon')
        .box-footer
          a.btn.waves-effect(href='http://www.amazon.de/gp/registry/wishlist/9OHSEUUDSJGD', target='_blank', class=appdata.ui.theme.buttonColor) #{__('Amazon Wishlist')}
  .modal-footer
    a.waves-effect.btn.modal-action.modal-close(href='#', class=appdata.ui.theme.buttonColor) #{__('Close')}