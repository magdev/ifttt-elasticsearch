#info.modal.modal-fixed-footer
  .modal-content
    h4 #{appdata.name} #{__('Info')}
    p.grey-text.lighten-1: em (#{__('Version %s', pckg.version)})
    if appdata.description
      p #{__(appdata.description)}
    else 
      p #{__(pckg.description)}
    .row
      .col.s12.m4.hide-on-med-and-down.box
        p.box-title #{__('Bookmarklet')}
        p.box-body #{__('Drag this button over your bookmarks to push content from everywhere into the search-server.')}
        p.box-footer.center-align: a.btn.btn-bookmarklet(href=bookmarklet(), class=appdata.ui.theme.buttonColor) #{__('Push to %s', appdata.name)}
      .col.s12.m4.box
        p.box-title #{__('Search-Plugin')}
        p.box-body #{__('To use the search directly in the browser add the Search-Plugin.')}
        p.box-footer.center-align: a.btn.add-search(href='#{baseurl}/opensearch.xml', class=appdata.ui.theme.buttonColor) #{__('Add Search-Plugin')}
      if isAdmin()
        .col.s12.m4.box
          p.box-title #{__('Elasticsearch Head')}
          p.box-body #{__('Open the Elasticsearch Head-Plugin in a new tab.')}
          p.box-footer.center-align: a.waves-effect.btn(href='#{config.elasticsearch.host}/_plugin/head', target='_blank', class=appdata.ui.theme.buttonColor) #{__('Open in Browser')}
        
  .modal-footer
    a.waves-effect.btn.modal-action.modal-close(href='#', class=appdata.ui.theme.buttonColor) #{__('Close')}